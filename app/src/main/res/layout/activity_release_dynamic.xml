<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/news_in_top_shadow">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tx_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="发表帖子"
                android:textColor="@color/bottom_bar_click"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btn_release"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="发表"
                android:textSize="14dp"
                android:background="@drawable/un_release_dynamic"
                android:textColor="@color/black_alpha_128"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_toolbar"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_release_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black_alpha_128"
                android:textColorHint = "@color/black_alpha_128"
                android:hint="我有话要说..."
                android:textSize="@dimen/font_18"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_release_image1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/addmore"/>
                <ImageView
                    android:id="@+id/iv_release_image2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:visibility="invisible"
                    android:src="@drawable/bg_yasuo"
                    android:layout_margin="3dp" />
                <ImageView
                    android:id="@+id/iv_release_image3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_margin="3dp"
                    android:visibility="invisible"
                    android:src="@drawable/bg_yasuo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_release_image4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:layout_margin="3dp" />
                <ImageView
                    android:id="@+id/iv_release_image5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:visibility="invisible"
                    android:src="@drawable/bg_yasuo"
                    android:layout_margin="3dp"/>
                <ImageView
                    android:id="@+id/iv_release_image6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:visibility="invisible"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_yasuo"
                    android:layout_margin="3dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/_xpopup_list_divider">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/biaoqing"/>
            <ImageView
                android:id="@+id/iv_release_photo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/photo"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/biaoqian"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/jiahao"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="标题"
                android:textColor="#707070"/>
            <TextView
                android:id="@+id/tv_content_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="1000"
                android:textColor="@color/black_alpha_128"
                android:layout_marginRight="15dp"
                android:textSize="16dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>